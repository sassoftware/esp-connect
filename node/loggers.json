[
    {
        "info": {
            "usage":{
                "usage":"[-context] [-level] [-format]",
                "options":{
                    "context":"the logging context to return (defaults to ALL)",
                    "level":"trace | debug | info | warn | error | fatal | none (defaults to empty, do not set the log level)",
                    "format":"xml | json (defaults to json)"
                }
            },
            "defaults": {
                "context":"",
                "level":"",
                "format":"json"
            },
            "exit-on-response":true
        }
    },
    {
        "loggers": {
            "id":"#guid#",
            "context":"@context@",
            "level":"@level@",
            "format":"@format@"
        }
    }
]
